<section class="mb-3 d-flex justify-content-center">
    <div class="card col-sm-3 p-10">
        <div class="mb-3 text-center">
            <h3>Agregar Cita</h3>
        </div>
        <div class="mb-2">
            <form action="/cita/add_cita" method="post">
                <div class="mb-2">
                    <label for="id">Id de la Cita</label>
                    <input type="text" class="form-control" name="id" id="id" required>
                </div>
                <div class="mb-2">
                    <label for="nombre">Nombre del Cliente</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" required>
                </div>
                <div class="mb-2">
                    <label for="correo">Correo</label>
                    <input type="email" class="form-control" name="correo" id="correo" required>
                </div>
                <div class="mb-2">
                    <label for="numero">Numero</label>
                    <input type="text" class="form-control" name="numero" id="numero" required>
                </div>
                <div class="mb-2">
                    <select name="servicio" id="servicio" class="form-select" aria-label="Default select example">
                        <option selected>Servicios</option>
                        {{#each servicio}}
                            <option value="{{nombre}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-2 text-center">
                    <button class="btn btn-success">Guardar</button>
                    <a class="btn btn btn-danger" href="/cita">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</section>