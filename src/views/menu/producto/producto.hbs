{{> navigation }}
<div class="container-fluid">
    <div class="row query">
        <div class="col-12">
            <div class="">
                <div class="row">
                    <div class="col-lg-6 d-flex justify-content-center">
                        <label class="label">Inventario</label>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-center">
                        <form class="form-inline" action="/filtrarProducto" method="post">
                            <div class="input-group mb-3 ">
                                <input type="text" class="form-control" placeholder="Nombre" name="nombre" id="nombre">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit">Buscar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="regla">
    <div class="row">
        <div class="col-12 product-list">
            <div class="container p-4">
                <div class="row table-responsive-sm">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Venta</th>
                            <th scope="col">Compra</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each productos}}
                        <tr>
                            <td>
                                <form action="/info_producto" method="post">
                                    <input type="text" name="id" id="id" value={{_id}} hidden required>
                                    <input class="btn btn-outline-secondary" type="submit" value="ver">
                                </form>
                            </td>
                            <td>{{nombre}}</td>
                            <td>{{categoria}}</td>
                            <td>{{cantidad}}</td>
                            <td>{{precio_venta}} Lps</td>
                            <td>{{precio_compra}} Lps</td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>