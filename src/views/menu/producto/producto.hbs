{{> navigation }}




<section class="d-flex justify-content-center" >
    <div class="mb-3">
        <h4>Inventario</h4>
    </div>
</section>

<div class="container p-4">
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Categoria</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Venta</th>
                <th scope="col">Editar</th>
            </tr>
            </thead>
            <tbody>
            {{#each productos}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{nombre}}</td>
                <td>{{categoria}}</td>
                <td>{{cantidad}}</td>
                <td>{{precio_venta}} Lps</td>
                <td><a href="/menu/producto/info_producto/{{id}}"><input class="btn btn-outline-secondary" type="button" value="ver"></a>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>

    </div>
</div>

