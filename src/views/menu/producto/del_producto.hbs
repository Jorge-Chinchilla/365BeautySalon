{{> navigation }}
{{#each delProducto}}
    <div class="container col-md-10 principal d-flex justify-content-center">
        <div class="card bg-light">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <h2 class="card-title">Â¿Desea eliminar este producto?</h2>
                    <hr class="regla">
                </div>
                <div class="row">
                    <input type="hidden" name="_id" value="{{_id}}">
                    <div class="col-12 d-flex justify-content-center">
                        <h4 class="linea">Nombre:</h4>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <input type="text" class="value" value="{{nombre}}" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <h4 class="linea">Categoria:</h4>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <input type="text" class="value" value="{{categoria}}" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <h4 class="linea">Disponibilidad:</h4>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <input type="text" class="value" value="{{cantidad}}" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <h4 class="linea">Precio:</h4>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <input type="text" class="value" value="{{precio_venta}}" readonly>
                    </div>
                </div>
                <div class="row buttons d-flex justify-content-around">
                    <form action="/producto/del_producto/{{_id}}" method="post">
                        <button class="btn btn-outline-danger">Eliminar</button>
                    </form>
                    <form action="/info_producto" method="post" class="d-flex justify-content-center">
                        <input type="text" name="id" id="id" value={{_id}} hidden required>
                        <button type="submit" class="btn btn-outline-primary">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/each}}