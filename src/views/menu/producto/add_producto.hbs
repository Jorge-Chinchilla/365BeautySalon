                    <input type="number" class="form-control" name="precio_venta" id="precio_venta" required>
                </div>
                <div class="mb-2">
                    <label for="categoria">Categoria</label>
                    <input type="text" class="form-control" name="categoria" id="categoria" required>
                </div>
