{{#each editProducto}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/menu/producto/edit_producto/{{_id}}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="id" value="{{id}}" required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" value="{{nombre}}"required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <input type="number" class="form-control" name="cantidad" value="{{cantidad}}" required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="precio_compra" value="{{precio_compra}}" required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="precio_venta" value="{{precio_venta}}" required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="categoria" value="{{categoria}}" required>
                        </div>
                        <label for=""></label>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Actualizar</button>
                            <a href="/menu/producto"><input type="button" value="Cancelar"></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{/each}}
