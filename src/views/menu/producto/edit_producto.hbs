{{> navigation }}
{{#each editProducto}}

    <div class="container p-12">
        <div class="row">
            <div class="col-md-12 mx-auto principal d-flex justify-content-center">
                <div class="card d-flex justify-content-center">
                    <div class="row d-flex justify-content-center   ">
                        <labeltitulo class="titulo">Editar</labeltitulo>
                    </div>
                    <div class="row">
                        <div class="card-body">
                            <form action="/producto/edit_producto/{{_id}}" method="post">
                                <div class="form-group">
                                    <label for="">Id</label>
                                    <input type="text" class="form-control" name="id" value="{{id}}" autofocus required>
                                </div>
                                <label for="">Nombre</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre" value="{{nombre}}" required>
                                </div>
                                <label for="">Cantidad</label>
                                <div class="form-group">
                                    <input type="number" class="form-control" name="cantidad" value="{{cantidad}}" required>
                                </div>
                                <label for="">Precio de compra</label>
                                <div class="form-group">
                                    <input type="number" step="0.01" class="form-control" name="precio_compra" value="{{precio_compra}}" required>
                                </div>
                                <label for="">Precio de venta</label>
                                <div class="form-group">
                                    <input type="number" step="0.01" class="form-control" name="precio_venta" value="{{precio_venta}}" required>
                                </div>
                                <label for="">Categor√≠a</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="categoria" value="{{categoria}}" required>
                                </div>
                                <label for=""></label>
                                <div class="form-group d-flex justify-content-center">
                                    <label>
                                        <button class="btn btn-success">Actualizar</button>
                                        <a href="/producto/info_producto/{{id}}"><input type="button" class="btn btn-danger" value="Cancelar"></a>
                                    </label>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






