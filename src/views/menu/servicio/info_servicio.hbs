{{> navigation }}
{{#each infoServicio}}
<div class="container col-md-12 principal d-flex justify-content-center">
    <div class="card bg-light">
        <div class="card-body">
            <h2 class="card-title">Servicio de {{nombre}}</h2>
            <h4>ID: {{id}}</h4>
            <h4>Precio: {{precio}}Lps</h4>
            <h4>Registro: {{fecha}}</h4>
            <div class="text-right">
                <a href="/servicio/edit_servicio/{{id}}"><button type="button" class="btn btn-outline-primary">Editar</button></a>
                <a href="/servicio/del_servicio/{{id}}"><button type="button" class="btn btn-outline-danger">Eliminar</button></a>
            </div>
        </div>
    </div>
</div>
{{/each}}