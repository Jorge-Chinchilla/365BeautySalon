{{> navigation }}
{{#each infoServicio}}
<div class="container col-md-12 principal d-flex justify-content-center">
    <div class="card bg-light">
        <div class="card-body">
            <h2 class="card-title">Servicio de {{nombre}}</h2>
            <h4>ID: {{id}}</h4>
            <h4>Precio: {{precio}}Lps</h4>
            <h4>Registro: {{fecha}}</h4>
            <div class="text-right">
                <form action="/edit_servicio" method="post">
                    <input type="text" name="id" id="id" value={{id}} hidden required>
                    <button type="submit" class="btn btn-outline-primary">Editar</button>
                </form>
                <form action="/del_servicio" method="post">
                    <input type="text" name="id" id="id" value={{id}} hidden required>
                    <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}