{{> navigation }}

<div class="container-fluid">
    <div class="row query">
        <div class="col-sm-12">
            <div class="">
                <div class="row">
                    <div class="col-lg-6 d-flex justify-content-center">
                        <label class="label">Servicios </label>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-center">
                        <form class="form-inline">
                            <div class="input-group mb-3 ">
                                <input type="text" class="form-control" placeholder="Nombre" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="button">Buscar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="regla">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-6 product-list">
            <div class="container p-4">
                <div class="row table-responsive-sm">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each servicio}}
                        <tr>
                            <td><a href="/servicio/info_servicio/{{id}}"><input class="btn btn-outline-secondary" type="button" value="ver"></a></td>
                            <td>{{id}}</td>
                            <td>{{nombre}}</td>
                            <td>{{precio}} Lps</td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>