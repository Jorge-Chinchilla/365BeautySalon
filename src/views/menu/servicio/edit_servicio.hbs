{{> navigation }}

{{#each editServicio}}


    <div class="container col-md-10 principal d-flex justify-content-center">
        <div class="card bg-light">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <h2 class="card-title">Editar {{nombre}}</h2>
                    <hr class="regla">
                </div>
                <form action="/servicio/edit_servicio/{{_id}}" method="post">
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Nombre:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{nombre}}" class="value" name="nombre" id="nombre" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Precio:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{precio}}" class="value" name="precio" id="precio" required>
                        </div>
                    </div>
                    <div class="row buttons d-flex justify-content-around">
                        <button class="btn btn-outline-primary">Actualizar</button>
                    </div>
                </form>
                <form action="/info_servicio" method="post" class="d-flex justify-content-center">
                    <input type="text" name="id" id="id" value={{_id}} hidden required>
                    <button type="submit" class="btn btn-outline-danger">Cancelar</button>
                </form>
            </div>
        </div>
    </div>

{{/each}}
