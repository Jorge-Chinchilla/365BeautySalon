{{> navigation }}

<section class="d-flex justify-content-center" >
    <div class="mb-3">
        <h4>Empleados</h4>
    </div>
</section>


<div class="container p-4">

    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Identidad</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Cargo</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {{#each empleados}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{cargo}}</td>
                    <td><a href="/menu/empleado/info_empleado/{{id}}"><input class="btn btn-outline-secondary" type="button" value="ver"></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>


