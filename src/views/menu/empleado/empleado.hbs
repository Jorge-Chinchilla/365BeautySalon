{{> navigation }}


<div class="container-fluid">
    <div class="row query">
        <div class="col-12">
            <div class="">
                <div class="row">
                    <div class="col-lg-6 d-flex justify-content-center">
                        <label class="label">Empleados </label>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-center">
                        <form class="form-inline">
                            <div class="input-group mb-3 ">
                                <input type="text" class="form-control" placeholder="Nombre" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="button">Buscar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="regla">
    <div class="row">
        <div class="col-12 product-list">
            <div class="container p-4">
                <div class="row table-responsive-sm">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Identidad</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Cargo</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each empleados}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{nombre}}</td>
                                <td>{{apellido}}</td>
                                <td>{{cargo}}</td>
                                <td><a href="/empleado/info_empleado/{{_id}}"><input class="btn btn-outline-secondary" type="button" value="ver"></a>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

