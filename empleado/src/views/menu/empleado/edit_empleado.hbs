{{> navigation }}

{{#each editEmpleado}}

    <div class="container col-md-10 principal d-flex justify-content-center">
        <div class="card bg-light">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <h2 class="card-title">Editar {{nombre}}</h2>
                    <hr class="regla">
                </div>
                <form action="/empleado/edit_empleado/{{_id}}" method="post">
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Identidad:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{id}}" class="value" name="id" id="id" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Nombre:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{nombre}}" class="value" name="nombre" id="nombre" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Apellido:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{apellido}}" class="value" name="apellido" id="apellido" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Telefono:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{telefono}}" class="value" name="telefono" id="telefono" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Correo:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="email" value="{{correo}}" class="value" name="correo" id="correo" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center">
                            <h4 class="linea">Cargo:</h4>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <input type="text" value="{{cargo}}" class="value" name="cargo" id="cargo" required>
                        </div>
                    </div>
                    <div class="row buttons d-flex justify-content-around">
                        <button class="btn btn-outline-primary">Actualizar</button>
                    </div>
                </form>
                <form action="/info_empleado" method="post" class="d-flex justify-content-center">
                    <input type="text" name="id" id="id" value={{id}} hidden required>
                    <button type="submit" class="btn btn-outline-danger">Cancelar</button>
                </form>
            </div>
        </div>
    </div>

{{/each}}

